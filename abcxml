local DiamondCount = Interface:WaitForChild("DiamondCount"):WaitForChild("Count")

local function detectLang()
    local locale = LocalPlayer.LocaleId:lower() -- ví dụ: vi-vn, en-us
    if string.find(locale, "vi") then
        return "vi"
    else
        return "en"
    end
end

